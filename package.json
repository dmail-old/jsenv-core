{
	"name": "system-platform",
	"version": "0.0.1",
	"description": "Run JavaScript on different platform",
	"license": "UNLICENSED",
	"dependencies": {
		"babel-core": "^5.8.22",
		"babel-polyfill": "6.0.16",
		"systemjs": "git+https://github.com/dmail/systemjs",
		"@dmail/promise-es6": "*",
		"@dmail/set-immediate": "*",
		"@dmail/object-assign": "*",
		"@dmail/object-complete": "git+https://github.com/dmail/object-complete",
		"@dmail/url-search-params": "*",
		"@dmail/url": "*",
		"@dmail/proto": "*",
		"system-node-sourcemap": "*",
		"open": "*"
	},
	"bin": {
		"system-platform": "./bin/run"
	},
	"scripts": {
		"test": "node ./bin/run test/index.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dmail/system-platform"
	},
	"eslintConfig": {
		"extends": "./eslint-conf.js",
	    "rules": {
    		"space-before-function-paren": [2, "never"],
    		"valid-jsdoc": [2, {"requireReturn": false, "prefer": {"returns": "return"}}],
    		"require-jsdoc": 1,
    		"max-len": [1, 100, 4, {"ignoreComments": true, "ignoreUrls": true, "ignorePattern": "^\\s*var\\s.+=\\s.+\\/.*?\\/;$"}],

    		"radix": 0,
    		"require-jsdoc": 0,
    		"eqeqeq": 0
    	}
    }
}